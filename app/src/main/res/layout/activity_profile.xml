<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#394166"
    tools:context="com.costbear.android.thesexydriver.ProfileActivity">

    <ImageView
        android:id="@+id/yourcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yourcar"/>

    <TextView
        android:id="@+id/year"
        android:text="Year"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourcar"/>

    <EditText
        android:id="@+id/yearField"
        android:hint="(yyyy format)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/yourcar"/>

    <TextView
        android:id="@+id/make"
        android:text="Make"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/makeField"
        android:hint="(eg. Honda)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@id/make"
        android:layout_below="@id/yearField"/>

    <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/donebutton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <ListView
        android:id="@+id/listview"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/done"/>


</RelativeLayout>
